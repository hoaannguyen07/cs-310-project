<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/standard_header.ejs") %>

        <!-- Custom CSS -->
        <link
            rel="stylesheet"
            type="text/css"
            href="/stylesheets/tag/show-all.css"
        />
    </head>
    <body>
        <%- include('../partials/body_start') %>

        <h1>Show All Tags</h1>

        <a class="btn btn-primary" href="/tags/new">Add Tag</a>

        <!-- Show tags if there are tags from show (passed in from the backend) -> Victoria  -->
        <% if (tags) { %>
        <table class="tags">
            <tr>
                <th style="min-width: 150px">Tag Name</th>
                <th>Action</th>
            </tr>
            <% tags.forEach(tag => { %>
            <tr class="tag">
                <td><%= tag.description %></td>
                <td>
                    <div class="action-btns">
                        <!-- button to go show the specific tag (to view & update) -> Victoria  -->
                        <a
                            class="btn btn-primary"
                            href="/tags/tag/<%- tag.id %>"
                            >Update</a
                        >

                        <!-- button to delete specific tag -> Victoria  -->
                        <form
                            action="/tags/tag/<%= tag.id %>/delete"
                            method="POST"
                        >
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            <% }) %>
        </table>
        <% } %> <%- include("../partials/standard_footer.ejs") %>
    </body>
</html>
