<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/standard_header.ejs") %>

        <!-- Custom CSS -->
        <link
            rel="stylesheet"
            type="text/css"
            href="/stylesheets/blog/show_all.css"
        />
    </head>
    <body>
        <%- include('./partials/body_start') %>

        <div>
            <h1>Welcome to the Home Page, where all blogs will be put</h1>
        </div>

        <p></p>

        <% if (blogs) { %> <% blogs.forEach(blog => { %>
        <div class="card">
            <div class="card-body">
                <div class="text-body">
                    <h5><%= blog.title %></h5>
                    <p><%= blog.body %></p>
                </div>
                <div class="blog_extras">
                    <p><%= blog.created_by %></p>
                    <p>Upvotes: <%= blog.num_upvotes %></p>
                    <a class="btn btn-primary" href="/blogs/blog/<%=blog.id%>">
                        Go to Post
                    </a>
                </div>
            </div>
        </div>
        <% }) %> <% } %> <%- include("partials/standard_footer.ejs") %>
    </body>
</html>
